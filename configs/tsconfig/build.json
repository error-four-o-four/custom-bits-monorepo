{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "outDir": "./dist",
    "baseUrl": "./"
  }
}
