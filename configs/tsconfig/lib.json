{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Build",
	"extends": "./base.json",
	"exclude": ["node_modules"],
	"compilerOptions": {
		"composite": true,
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true
	}
}
