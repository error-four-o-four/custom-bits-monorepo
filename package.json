{
	"name": "custom-bits",
	"type": "module",
	"version": "0.0.0",
	"license": "MIT",
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=18.0.0"
	},
	"scripts": {
		"format": "npm run format --workspaces --if-present",
		"format:fix": "npm run format:fix --workspaces --if-present",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"dev": "vite",
		"build:lib": "vite build",
		"build:tsc": "tsc -p ./tsconfig.build.json",
		"build": "npm run build:tsc && npm run build:lib"
	},
	"devDependencies": {
		"@custom-bits/config": "^0.0.0",
		"eslint": "^9.10.0",
		"prettier": "^3.3.3",
		"typescript": "^5.5.3"
	},
	"workspaces": [
		"config",
		"demo",
		"components/*"
	]
